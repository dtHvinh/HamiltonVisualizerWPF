<Application x:Class="HamiltonVisualizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HamiltonVisualizer"
             xmlns:v="clr-namespace:HamiltonVisualizer.View"
             xmlns:vm="clr-namespace:HamiltonVisualizer.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/MainBackground.xaml">
                </ResourceDictionary>
                <ResourceDictionary Source="/Themes/MenuButton.xaml">
                </ResourceDictionary>
                <ResourceDictionary Source="/Themes/NavBar.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:DrawViewModel}">
                <v:DrawView></v:DrawView>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
