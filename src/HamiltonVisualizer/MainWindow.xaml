<Window x:Class="HamiltonVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HamiltonVisualizer"
        xmlns:VM="clr-namespace:HamiltonVisualizer.ViewModels"
        mc:Ignorable="d"
        Title="Hamilton Visualizer" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.DataContext>
        <VM:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" 
                Grid.ColumnSpan="2" 
                MouseDown="Border_MouseDown"
                Style="{StaticResource NavBar}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Background="LightBlue" Style="{StaticResource WindowButton}" 
                        MouseDown="MinimizeToTaskbar"></Border>
                <Border Background="Yellow" Style="{StaticResource WindowButton}" 
                        MouseDown="MaximizeAndRestore"></Border>
                <Border Background="red" Style="{StaticResource WindowButton}"
                        MouseDown="Exit"></Border>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="1" Grid.Column="0" Background="White">
            <RadioButton  Style="{StaticResource MenuBtn}"
                          Content="Vẽ Đồ Thị"
                          Command="{Binding DrawViewCmd}"
                          IsChecked="True">
            </RadioButton>          
            <RadioButton  Style="{StaticResource MenuBtn}"
                          Content="Bộ Phận Liên Thông"
                          Command="{Binding ConCompCmd}">
            </RadioButton>          
            <RadioButton  Style="{StaticResource MenuBtn}"
                          Content="Chu trình"
                          Command="{Binding HamiltonCCmd}">
            </RadioButton>
        </StackPanel>

        <ContentControl Grid.Row="1"
                        Grid.Column="1"
                        Content="{Binding CurrentView}">
            
        </ContentControl>
    </Grid>
</Window>
